@model IEnumerable<Honeybee.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="page-header">
    <h1><i class="fas fa-box"></i> Products</h1>
</div>

<div class="row mb-4">
    <div class="col-md-6">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create New Product
        </a>
    </div>
    <div class="col-md-6">
        <form asp-action="Index" method="get" class="d-flex">
            <input type="text" name="searchString" class="form-control me-2" placeholder="Search products..." value="@ViewBag.SearchString" />
            <select name="category" class="form-control me-2" asp-items="ViewBag.Categories">
                <option value="">All Categories</option>
            </select>
            <button type="submit" class="btn btn-outline-primary">
                <i class="fas fa-search"></i> Search
            </button>
        </form>
    </div>
</div>

<div class="row">
    @if (Model != null && Model.Any())
    {
        @foreach (var product in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="product-card">
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" alt="@product.Name" class="product-image" />
                    }
                    else
                    {
                        <div class="product-image d-flex align-items-center justify-content-center">
                            <i class="fas fa-image fa-3x text-muted"></i>
                        </div>
                    }
                    <div class="p-3">
                        <h5>@product.Name</h5>
                        <p class="text-muted small">@product.Category</p>
                        <p class="text-muted small">@(product.Description?.Length > 50 ? product.Description.Substring(0, 50) + "..." : product.Description)</p>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="product-price">$@product.Price.ToString("F2")</span>
                            <span class="badge @(product.StockQuantity > 0 ? "bg-success" : "bg-danger")">
                                Stock: @product.StockQuantity
                            </span>
                        </div>
                        <div class="d-grid gap-2">
                            <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-eye"></i> Details
                            </a>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-outline-secondary btn-sm">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-outline-danger btn-sm">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </div>
                            @if (product.StockQuantity > 0)
                            {
                                <button class="btn btn-primary btn-sm" onclick="addToCart(@product.Id)">
                                    <i class="fas fa-cart-plus"></i> Add to Cart
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-info">
                <p>No products found. <a asp-action="Create">Create a new product</a> to get started.</p>
            </div>
        </div>
    }
</div>

