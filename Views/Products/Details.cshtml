@model Honeybee.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="page-header">
    <h1><i class="fas fa-box"></i> Product Details</h1>
</div>

<div class="row">
    <div class="col-md-6">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded" />
        }
        else
        {
            <div class="bg-light d-flex align-items-center justify-content-center" style="height: 400px; border-radius: 8px;">
                <i class="fas fa-image fa-5x text-muted"></i>
            </div>
        }
    </div>
    <div class="col-md-6">
        <div class="form-container">
            <h2>@Model.Name</h2>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">Category:</dt>
                <dd class="col-sm-8">@Model.Category</dd>

                <dt class="col-sm-4">Price:</dt>
                <dd class="col-sm-8">
                    <span class="product-price">$@Model.Price.ToString("F2")</span>
                </dd>

                <dt class="col-sm-4">Stock Quantity:</dt>
                <dd class="col-sm-8">
                    <span class="badge @(Model.StockQuantity > 0 ? "bg-success" : "bg-danger")">
                        @Model.StockQuantity
                    </span>
                </dd>

                <dt class="col-sm-4">Description:</dt>
                <dd class="col-sm-8">@(Model.Description ?? "No description available")</dd>

                <dt class="col-sm-4">Created Date:</dt>
                <dd class="col-sm-8">@Model.CreatedDate.ToString("MM/dd/yyyy")</dd>
            </dl>
            <div class="mt-4">
                @if (Model.StockQuantity > 0)
                {
                    <button class="btn btn-primary btn-lg" onclick="addToCart(@Model.Id)">
                        <i class="fas fa-cart-plus"></i> Add to Cart
                    </button>
                }
                else
                {
                    <button class="btn btn-secondary btn-lg" disabled>
                        <i class="fas fa-times-circle"></i> Out of Stock
                    </button>
                }
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg ms-2">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
        <i class="fas fa-edit"></i> Edit
    </a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
        <i class="fas fa-trash"></i> Delete
    </a>
</div>

