@model Honeybee.Models.Payment

@{
    ViewData["Title"] = "Payment Details";
}

<div class="page-header">
    <h1><i class="fas fa-credit-card"></i> Payment Details</h1>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="form-container">
            <h4>Payment Information</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">Payment ID:</dt>
                <dd class="col-sm-8">#@Model.Id</dd>

                <dt class="col-sm-4">Order ID:</dt>
                <dd class="col-sm-8">
                    <a asp-controller="Orders" asp-action="Details" asp-route-id="@Model.OrderId">#@Model.OrderId</a>
                </dd>

                <dt class="col-sm-4">Amount:</dt>
                <dd class="col-sm-8">
                    <span class="product-price">$@Model.Amount.ToString("F2")</span>
                </dd>

                <dt class="col-sm-4">Payment Method:</dt>
                <dd class="col-sm-8">@Model.PaymentMethod</dd>

                <dt class="col-sm-4">Status:</dt>
                <dd class="col-sm-8">
                    <span class="status-badge status-@Model.Status.ToLower()">@Model.Status</span>
                </dd>

                <dt class="col-sm-4">Payment Date:</dt>
                <dd class="col-sm-8">@Model.PaymentDate.ToString("MM/dd/yyyy HH:mm")</dd>

                <dt class="col-sm-4">Transaction ID:</dt>
                <dd class="col-sm-8">@Model.TransactionId</dd>

                @if (!string.IsNullOrEmpty(Model.CardNumber))
                {
                    <dt class="col-sm-4">Card Number:</dt>
                    <dd class="col-sm-8">@Model.CardNumber</dd>
                }

                @if (!string.IsNullOrEmpty(Model.CardHolderName))
                {
                    <dt class="col-sm-4">Card Holder:</dt>
                    <dd class="col-sm-8">@Model.CardHolderName</dd>
                }
            </dl>

            <h4 class="mt-4">Order Information</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">Customer:</dt>
                <dd class="col-sm-8">@Model.Order.Customer.FirstName @Model.Order.Customer.LastName</dd>

                <dt class="col-sm-4">Email:</dt>
                <dd class="col-sm-8">@Model.Order.Customer.Email</dd>

                <dt class="col-sm-4">Order Date:</dt>
                <dd class="col-sm-8">@Model.Order.OrderDate.ToString("MM/dd/yyyy HH:mm")</dd>
            </dl>
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-controller="Orders" asp-action="Details" asp-route-id="@Model.OrderId" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left"></i> Back to Order
    </a>
</div>

