@model List<Honeybee.Models.CartItem>

@{
    ViewData["Title"] = "Shopping Cart";
    var total = Model?.Sum(c => c.Subtotal) ?? 0;
}

<div class="page-header">
    <h1><i class="fas fa-shopping-cart"></i> Shopping Cart</h1>
</div>

@if (Model != null && Model.Any())
{
    <div class="row">
        <div class="col-md-8">
            @foreach (var item in Model)
            {
                <div class="cart-item">
                    <div class="row">
                        <div class="col-md-2">
                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                            {
                                <img src="@item.ImageUrl" alt="@item.ProductName" class="img-fluid rounded" />
                            }
                            else
                            {
                                <div class="bg-light d-flex align-items-center justify-content-center" style="height: 100px;">
                                    <i class="fas fa-image fa-2x text-muted"></i>
                                </div>
                            }
                        </div>
                        <div class="col-md-6">
                            <h5>@item.ProductName</h5>
                            <p class="text-muted">Price: $@item.Price.ToString("F2")</p>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Quantity:</label>
                            <input type="number" class="form-control" value="@item.Quantity" min="1" 
                                   onchange="updateCartQuantity(@item.ProductId, this.value)" />
                        </div>
                        <div class="col-md-2 text-end">
                            <p class="h5">$@item.Subtotal.ToString("F2")</p>
                            <form asp-action="Remove" method="post" class="d-inline">
                                <input type="hidden" name="productId" value="@item.ProductId" />
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash"></i> Remove
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
            <div class="mt-3">
                <form asp-action="Clear" method="post">
                    <button type="submit" class="btn btn-outline-danger">
                        <i class="fas fa-trash-alt"></i> Clear Cart
                    </button>
                </form>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-container">
                <h4>Order Summary</h4>
                <hr />
                <div class="d-flex justify-content-between mb-2">
                    <span>Subtotal:</span>
                    <span>$@total.ToString("F2")</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span>Shipping:</span>
                    <span>$0.00</span>
                </div>
                <hr />
                <div class="d-flex justify-content-between mb-3">
                    <strong>Total:</strong>
                    <strong class="product-price">$@total.ToString("F2")</strong>
                </div>
                <a asp-controller="Orders" asp-action="Create" class="btn btn-primary btn-lg w-100">
                    <i class="fas fa-check"></i> Proceed to Checkout
                </a>
                <a asp-controller="Products" asp-action="Index" class="btn btn-outline-secondary w-100 mt-2">
                    <i class="fas fa-arrow-left"></i> Continue Shopping
                </a>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        <h4><i class="fas fa-info-circle"></i> Your cart is empty</h4>
        <p>Start shopping to add items to your cart!</p>
        <a asp-controller="Products" asp-action="Index" class="btn btn-primary">
            <i class="fas fa-shopping-bag"></i> Browse Products
        </a>
    </div>
}

@section Scripts {
    <script>
        function updateCartQuantity(productId, quantity) {
            updateCartQuantity(productId, parseInt(quantity));
        }
    </script>
}

