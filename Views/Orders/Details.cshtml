@model Honeybee.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<div class="page-header">
    <h1><i class="fas fa-shopping-bag"></i> Order Details #@Model.Id</h1>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="form-container">
            <h4>Order Information</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">Order ID:</dt>
                <dd class="col-sm-8">#@Model.Id</dd>

                <dt class="col-sm-4">Customer:</dt>
                <dd class="col-sm-8">@Model.Customer.FirstName @Model.Customer.LastName</dd>

                <dt class="col-sm-4">Email:</dt>
                <dd class="col-sm-8">@Model.Customer.Email</dd>

                <dt class="col-sm-4">Phone:</dt>
                <dd class="col-sm-8">@Model.Customer.Phone</dd>

                <dt class="col-sm-4">Order Date:</dt>
                <dd class="col-sm-8">@Model.OrderDate.ToString("MM/dd/yyyy HH:mm")</dd>

                <dt class="col-sm-4">Status:</dt>
                <dd class="col-sm-8">
                    <span class="status-badge status-@Model.Status.ToLower()">@Model.Status</span>
                </dd>

                <dt class="col-sm-4">Shipping Address:</dt>
                <dd class="col-sm-8">@(Model.ShippingAddress ?? "N/A")</dd>
            </dl>

            <h4 class="mt-4">Order Items</h4>
            <hr />
            <table class="table">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Unit Price</th>
                        <th>Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderItems)
                    {
                        <tr>
                            <td>@item.Product.Name</td>
                            <td>@item.Quantity</td>
                            <td>$@item.UnitPrice.ToString("F2")</td>
                            <td>$@item.Subtotal.ToString("F2")</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="3" class="text-end">Total:</th>
                        <th class="product-price">$@Model.TotalAmount.ToString("F2")</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-container">
            <h4>Payment Status</h4>
            <hr />
            @if (Model.Payment != null)
            {
                <dl class="row">
                    <dt class="col-sm-6">Status:</dt>
                    <dd class="col-sm-6">
                        <span class="status-badge status-@Model.Payment.Status.ToLower()">@Model.Payment.Status</span>
                    </dd>
                    <dt class="col-sm-6">Method:</dt>
                    <dd class="col-sm-6">@Model.Payment.PaymentMethod</dd>
                    <dt class="col-sm-6">Amount:</dt>
                    <dd class="col-sm-6">$@Model.Payment.Amount.ToString("F2")</dd>
                    <dt class="col-sm-6">Transaction ID:</dt>
                    <dd class="col-sm-6">@Model.Payment.TransactionId</dd>
                </dl>
                <a asp-controller="Payment" asp-action="Details" asp-route-id="@Model.Payment.Id" class="btn btn-outline-primary w-100">
                    <i class="fas fa-credit-card"></i> View Payment Details
                </a>
            }
            else
            {
                <p class="text-muted">No payment recorded yet.</p>
                <a asp-controller="Payment" asp-action="Create" asp-route-orderId="@Model.Id" class="btn btn-primary w-100">
                    <i class="fas fa-credit-card"></i> Process Payment
                </a>
            }
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left"></i> Back to Orders
    </a>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
        <i class="fas fa-edit"></i> Edit Order
    </a>
</div>

