@model IEnumerable<Honeybee.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<div class="page-header">
    <h1><i class="fas fa-shopping-bag"></i> Orders</h1>
</div>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var order in Model)
        {
            <div class="col-md-12 mb-3">
                <div class="order-card">
                    <div class="row">
                        <div class="col-md-8">
                            <h5>Order #@order.Id</h5>
                            <p class="mb-1"><strong>Customer:</strong> @order.Customer.FirstName @order.Customer.LastName</p>
                            <p class="mb-1"><strong>Email:</strong> @order.Customer.Email</p>
                            <p class="mb-1"><strong>Order Date:</strong> @order.OrderDate.ToString("MM/dd/yyyy HH:mm")</p>
                            <p class="mb-1"><strong>Items:</strong> @order.OrderItems.Sum(oi => oi.Quantity)</p>
                        </div>
                        <div class="col-md-4 text-end">
                            <p class="h4 product-price">$@order.TotalAmount.ToString("F2")</p>
                            <span class="status-badge status-@order.Status.ToLower()">@order.Status</span>
                            <div class="mt-3">
                                <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye"></i> View Details
                                </a>
                                <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-sm btn-outline-secondary">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        <p>No orders found.</p>
    </div>
}

